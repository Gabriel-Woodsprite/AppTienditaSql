<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.apptienditasql.controller.InventarioController"
            prefHeight="600.0" prefWidth="900.0">

    <VBox spacing="10.0" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <!-- Título -->
        <Label text="Registrar Compra" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <!-- Datos generales de la compra -->
        <GridPane hgap="15" vgap="10">
            <Label text="Folio:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtFolio" promptText="N° nota o factura" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Fecha:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <DatePicker fx:id="datePickerFecha" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

            <Label text="Proveedor:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <ComboBox fx:id="comboProveedor" prefWidth="200" promptText="Seleccionar proveedor" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </GridPane>

        <Separator/>

        <!-- Ingreso de productos -->
        <HBox spacing="10.0">
            <TextField fx:id="txtBuscarProducto" promptText="Buscar producto..." HBox.hgrow="ALWAYS"/>
            <TextField fx:id="txtCantidad" promptText="Cantidad" prefWidth="80"/>
            <TextField fx:id="txtPrecioCompra" promptText="Precio compra" prefWidth="100"/>
            <DatePicker fx:id="datePickerCaducidad" promptText="Caducidad" prefWidth="140"/>
            <Button fx:id="btnAgregarProducto" text="Agregar"/>
        </HBox>

        <!-- Tabla de productos agregados a la compra -->
        <TableView fx:id="tablaDetalleCompra" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colProducto" text="Producto" prefWidth="180"/>
                <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="80"/>
                <TableColumn fx:id="colPrecioUnitario" text="Precio Compra" prefWidth="100"/>
                <TableColumn fx:id="colSubtotal" text="Subtotal" prefWidth="100"/>
                <TableColumn fx:id="colCaducidad" text="Caducidad" prefWidth="120"/>
                <TableColumn fx:id="colEliminar" text="❌" prefWidth="40"/>
            </columns>
        </TableView>

        <!-- Total y botones finales -->
        <HBox spacing="20" alignment="CENTER_RIGHT">
            <Label text="Total Compra:" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblTotalCompra" text="pesos" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnGuardarCompra" text="Guardar Compra" style="-fx-background-color: #5cb85c; -fx-text-fill: white;"/>
            <Button fx:id="btnCancelarCompra" text="Cancelar" style="-fx-background-color: #d9534f; -fx-text-fill: white;"/>
        </HBox>

    </VBox>

</AnchorPane>
